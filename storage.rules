rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and manage their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Project files are accessible by the project owner
    match /projects/{projectId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == firestore.get(/databases/(default)/documents/projects/{projectId}).data.user_id;
    }
    
    // Moodboard images are accessible by the moodboard owner
    match /moodboards/{moodboardId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == firestore.get(/databases/(default)/documents/moodboards/{moodboardId}).data.user_id;
    }
    
    // Public templates are readable by all authenticated users
    match /templates/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}
